<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context=".MainFragments.SettingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/margin_8"
                android:paddingBottom="@dimen/margin_8"
                android:text="@string/setting"
                android:textColor="@color/absoluteBlack"
                android:textSize="@dimen/text_view_24sp"
                app:fontFamily="@font/montserrat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_temp_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_c"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/left_button"
                        android:text="@string/temp_setting_degree_c"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_f"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/temp_setting_degree_f"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_scientist"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:text="@string/scientist"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_distance_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/distance_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_km"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/km"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_mi"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/mi"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_bananas"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/bananas"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_speed_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_kmph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/kmph"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_miph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/miph"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_bananaph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:text="@string/banana_h"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pressure_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pressure_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_psi"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/psi"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_mmhg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/mmhg"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_depress"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:text="@string/your_depression"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_background_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn_random_color"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/random_color"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_picture"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:text="@string/picture"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_picture_random"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:text="@string/random_picture"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_explicit_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/explicit_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_im_not"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/im_not"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />

                    <Button
                        android:id="@+id/btn_hell_yeah"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:text="@string/hell_yeah"
                        android:textAllCaps="false"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        app:fontFamily="@font/montserrat" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16">

                <TextView
                    android:id="@+id/daily_notification_setting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_notification_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Switch
                    android:id="@+id/daily_notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/daily_notification_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/time_place_holder"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_16sp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintEnd_toStartOf="@id/daily_notification_switch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/daily_notification_setting_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:text="@string/rate_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:text="@string/about_setting_title"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    app:fontFamily="@font/montserrat" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/about_me_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
